{% if template == 'collection' %}
  {% render 'template-collection' %}
{% endif %}

{% if template == 'collection.alternating' %}
  {% render 'template-collection.alternating' %}
{% endif %}

{% if template == 'collection.random' %}
  {% render 'template-collection.random' %}
{% endif %}

{% schema %}
{
  "name": "Collection page",
  "settings": [
    {
      "type": "paragraph",
      "content": "Launch offers three distinct templates that can be applied to a collection page. You'll find these in the Theme templates section of each Collection in your Shopify admin."
    },
    {
      "type": "range",
      "id": "products-per-page",
      "label": "Products per page",
      "min": 4,
      "max": 50,
      "step": 2,
      "default": 12
    },
    {
      "type": "select",
      "id": "text_placement",
      "label": "Product information placement",
      "options": [
        {
          "value": "overlay",
          "label": "Overlay image"
        },
        {
          "value": "below",
          "label": "Below image"
        }
      ],
      "default": "overlay",
      "info": "Show product information as an overlay on the product image, or below. Does not effect the Alternating template."
    },
    {
      "type": "header",
      "content": "Stock level indicator"
    },
    {
      "type": "checkbox",
      "id": "stock_overlay_show",
      "label": "Show indicator",
      "default": false
    },
    {
      "type": "range",
      "id": "stock-overlay-threshold",
      "label": "Display when stock is lower than:",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5
    }
  ]
}

{% endschema %}