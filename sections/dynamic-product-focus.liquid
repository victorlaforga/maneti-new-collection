{% assign product = false %}
{% assign onboarding = true %}

{% if section.settings.product != blank %}
  {% assign product = section.settings.product %}
  {% assign onboarding = false %}
{% endif %}

{%
  render 'product-focus'
  product: product,
  onboarding: onboarding
%}

{% schema %}
{
  "name": "Product focus",
  "max_blocks": 4,
  "settings": [
    {
      "type": "checkbox",
      "id": "show_product_image",
      "label": "Show product image",
      "default": true
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Background style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "gradient",
          "label": "Gradient"
        }
      ],
      "default": "light"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Feature"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Let your customers know what details set your product apart from the competition.</p>"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "refresh",
          "info": "[Click here](http:\/\/ionicons.com\/) to view the list of available icons. Example: bluetooth"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Product",
      "name": "Product focus",
      "settings": {
        "title": "Product focus"
      },
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "refresh"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "volume-high"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "battery-charging"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "microphone"
          }
        }
      ]
    }
  ]
}

{% endschema %}