{%- assign title = section.settings.title -%}
{%- assign title2 = section.settings.title2 -%}
{%- assign title3 = section.settings.title3 -%}

<section class="section-choices">
    <div class="choices-container">
        <div class="choice choice-one">
            <div>
                <img class="reusable-img not-reusable"
                    src="https://cdn.shopify.com/s/files/1/0424/0982/0320/files/not_reusable.png?v=1611501911" alt="">
                <p class="locatie-gebruik">Vaste plek</p>
            </div>
            {{- title -}}
            
        </div>
        <div class="choice choice-two shake-slow shake-constant shake-constant--hover">
            <div>
                <img class="reusable-img"
                    src="data:image/svg+xml;base64," />
                <p class="locatie-gebruik">Herbruikbaar</p>
            </div>{{- title2 -}}
            <p class="newButton choiceButton">NIEUW!</p>
            

        </div>

    </div>
</section>
{% schema %}

{
"name": "Title and product",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title First Choice"
},
{
"type": "text",
"id": "title2",
"label": "Title Second Choice"
},
{
"type": "text",
"id": "title3",
"label": "Title Third Choice"
},
{
"type": "product",
"id": "product",
"label": "Featured Product"
}
],
"presets": [
{
"name": "Choices", // Make it avaible for the client to drag and drop the section on the homepage
"category": "Custom section"
}
]
}

{% endschema %}