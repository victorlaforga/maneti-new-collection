    .titelDesktop {
        font-size: 35px;
        color: white;
        margin-bottom: 15px;
    }
    .containerButtonHero {
        position: absolute;
        top: 45%;
        right: 7.5%;
    }
    .containerButtonHero a {
        background-color: #FDC532;
        border-color: #FDC532;
        color: white;
    }
    .heroVideo {
        position: relative;
        margin-top: -88px;
    }

    .hero-h2 {
        text-transform: uppercase;
        color: white;
        position: absolute;
        left: 7.5%;
        letter-spacing: 1.3px;
        font-weight: 400;
        font-size: 18px;

    }

    .hero-h2.first {
        bottom: 90px;

    }

    .hero-h2.second {
        bottom: 60px;

    }

    .hero-h2.third {
        bottom: 30px;

    }
    #vidMobile {
        display: block;
    }
    #vidDesktop {
        display: none;
    }
@media screen and (max-width: 720px) {
    .containerButtonHero {
        position: absolute;
        top: 80%;
        left: 7.5%;
        display: none;
        
    }
   
   
}
